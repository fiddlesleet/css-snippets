/* 
*
* HOVER EFFECTS 
*
*/

/* Hide before hover */

/* Show Learn More on hover */
.nanodegree-card:hover .learn-more {
	font-size: 0.96em;
  font-weight: 600;
  letter-spacing: 0.1em;
  text-transform: uppercase;
  text-align: right;  
}

/* Show before hover */
.nanodegree-card .school-info, .nanodegree-card h6, .nanodegree-card hr  {
  opacity: 1;
}

/* Hide on hover */
.nanodegree-card:hover .school-info, .nanodegree-card:hover h6, .nanodegree-card:hover hr  {
  opacity: 0;
}

/* Hide before hover */
.nanodegree-card h2, .nanodegree-card .learn-more {
  opacity: 0;
}

/* Show on hover */
.nanodegree-card:hover h2, .nanodegree-card:hover .learn-more {
  opacity: 1;
}

